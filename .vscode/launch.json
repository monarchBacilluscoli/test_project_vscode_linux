{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/first_project",    // 编译好的待debug程序
            "args": [], // 可输入运行参数
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // 当前工作路径（linux命令行命令之前显示的路径）
            "environment": [], // 额外的环境变量
            "externalConsole": false, //是否打开外部终端（在弹窗终端下调试）
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make the entire project" // 每次编译之前运行一次task.json之中label为"make the entire project"的task
        }
    ]
}