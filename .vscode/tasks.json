{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make the entire project", // 编译链接整个工程
            "type": "shell",
            "command": "make", // 使用了make命令
            "args": [
                "-j" // 允许多线程编译
            ],
            "options": {
                "cwd": "${cwd}/build" // 在“当前工作路径”/build下执行make
            }
        }
    ]
}